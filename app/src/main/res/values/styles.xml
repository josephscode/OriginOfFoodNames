<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:fontFamily">@font/volkhov_bold</item>
  </style>

  <style name="AppTheme.WelcomeScreen" parent="AppTheme">
    <!-- Customize your theme here. -->
    <item name="android:textColor">@color/colorPrimary</item>
    <item name="android:textColorHint">@color/colorPrimaryDark</item>
  </style>

  <style name="AppTheme.QuizScreen" parent="AppTheme">
    <item name="android:textColor">@android:color/black</item>
    <item name="android:checkboxStyle">@style/CheckBoxStyle</item>
    <item name="android:radioButtonStyle">@style/RadioButtonStyle</item>
    <item name="checkboxStyle">@style/CheckBoxStyle</item>
    <item name="radioButtonStyle">@style/RadioButtonStyle</item>
  </style>

  <style name="AppTheme.ResultsScreen" parent="AppTheme">
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textSize">@dimen/medium_text_size</item>
  </style>

  <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
    <item name="android:textColor">@android:color/black</item>
    <item name="buttonTint">@android:color/black</item>
    <item name="android:fontFamily">@font/volkhov_bold</item>
    <item name="android:textSize">@dimen/medium_text_size</item>
  </style>

  <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
    <item name="android:textColor">@android:color/black</item>
    <item name="buttonTint">@android:color/black</item>
    <item name="android:fontFamily">@font/volkhov_bold</item>
    <item name="android:textSize">@dimen/medium_text_size</item>
  </style>

  <style name="FoodImageStyle">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">3</item>
    <item name="android:layout_margin">@dimen/margin_8dp</item>
    <item name="android:layout_gravity">left|center_vertical</item>
    <item name="android:scaleType">centerCrop</item>
    <item name="android:contentDescription">Image of food</item>
  </style>

  <style name="QuestionNumberStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:paddingTop">@dimen/margin_8dp</item>
    <item name="android:paddingStart">@dimen/margin_8dp</item>
    <item name="android:paddingEnd">@dimen/margin_8dp</item>
    <item name="android:textSize">@dimen/medium_text_size</item>
    <item name="android:layout_alignParentTop">true</item>
  </style>

  <style name="QuestionStatementStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:padding">@dimen/margin_8dp</item>
    <item name="android:textSize">@dimen/medium_text_size</item>
    <item name="android:layout_alignParentTop">true</item>
  </style>

  <style name="EditTextFieldStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_margin">@dimen/margin_8dp</item>
    <item name="android:layout_height">@dimen/edit_text_height</item>
    <item name="android:fontFamily">@font/volkhov_bold</item>
    <item name="android:textSize">@dimen/medium_text_size</item>
    <item name="android:gravity">center</item>
    <item name="android:shadowColor">@color/colorPrimaryDark</item>
    <item name="android:shadowDx">0</item>
    <item name="android:shadowDy">0</item>
    <item name="android:shadowRadius">100.0</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:background">@drawable/edittext_border</item>
    <item name="android:maxLines">1</item>
    <item name="android:maxLength">15</item>
  </style>

  <style name="ButtonStyle" parent="Widget.AppCompat.Button">
    <item name="android:textColor">@color/colorPrimary</item>
    <item name="android:textAllCaps">true</item>
  </style>

</resources>
